{
  "compilerOptions": {
    // * ===================================================================== *
    // * Visit https://aka.ms/tsconfig.json to read more about this file
    // * ===================================================================== *

    // * ===================================================================== *
    // * Basic Options
    // * ===================================================================== *
    "incremental": false,
    "target": "ES2020",
    "module": "ES2020",
    "declaration": false,
    "declarationMap": false,
    "outDir": "./_output",
    "rootDir": "./",

    // * ===================================================================== *
    // * Strict Type-Checking Options
    // * ===================================================================== *
    "strict": true,
    "alwaysStrict": false,

    // * ===================================================================== *
    // * Additional Checks
    // * ===================================================================== *
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // * ===================================================================== *
    // * Module Resolution Options
    // * ===================================================================== *
    "moduleResolution": "node",
    "esModuleInterop": true,

    // * ===================================================================== *
    // * Source Map Options
    // * ===================================================================== *
    "sourceMap": false,

    // * ===================================================================== *
    // * Advanced Options
    // * ===================================================================== *
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },

  "include": [
    "./**/*.ts",
  ],

  "exclude": [
    "./_output/**/*"
  ],
}
