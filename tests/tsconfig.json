{
  "compilerOptions": {
    // * ===================================================================== *
    // * Visit https://aka.ms/tsconfig.json to read more about this file
    // * ===================================================================== *

    // * ===================================================================== *
    // * Basic Options
    // * ===================================================================== *
    "noEmit": true,
    "allowJs": true,
    "target": "ES2020",
    "module": "ES2020",

    // * ===================================================================== *
    // * Strict Type-Checking Options
    // * ===================================================================== *
    "strict": true,
    "alwaysStrict": false,

    // * ===================================================================== *
    // * Additional Checks
    // * ===================================================================== *
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // * ===================================================================== *
    // * Module Resolution Options
    // * ===================================================================== *
    "moduleResolution": "node",
    "esModuleInterop": true,

    // * ===================================================================== *
    // * Source Map Options
    // * ===================================================================== *
    "sourceMap": false,

    // * ===================================================================== *
    // * Advanced Options
    // * ===================================================================== *
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },

  "include": [
    "main.test.ts",
    "helpers.ts",
  ],

  "exclude": [
    "expected",
    "fixtures",
  ],
}
