{
  "compilerOptions": {
    // * ===================================================================== *
    // * Visit https://aka.ms/tsconfig.json to read more about this file
    // * ===================================================================== *

    // * ===================================================================== *
    // * Basic Options
    // * ===================================================================== *
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "rootDir": "./src",

    // * ===================================================================== *
    // * Strict Type-Checking Options
    // * ===================================================================== *
    "strict": true,
    "alwaysStrict": false,

    // * ===================================================================== *
    // * Additional Checks
    // * ===================================================================== *
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // * ===================================================================== *
    // * Module Resolution Options
    // * ===================================================================== *
    "esModuleInterop": true,

    // * ===================================================================== *
    // * Source Map Options
    // * ===================================================================== *
    "sourceMap": true,

    // * ===================================================================== *
    // * Advanced Options
    // * ===================================================================== *
    "forceConsistentCasingInFileNames": true,
  },

  "include": [
    "./src/**/*.ts",
  ],

  "exclude": [
    "node_modules"
  ]
}
